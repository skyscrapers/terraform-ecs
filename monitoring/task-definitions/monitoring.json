[
      {
        "name":"s3_download",
        "image": "mesosphere/aws-cli:latest",
        "essential": false,
        "memoryReservation": 100,
        "mountPoints": [
          {
            "containerPath": "/project",
            "sourceVolume": "monitoring"
          }
        ],
        "command": [
          "s3",
          "cp",
          "s3://${monitoring_configs_bucket}",
          ".",
          "--recursive"
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "monitoring-${environment}",
            "awslogs-region": "${aws_region}",
            "awslogs-stream-prefix": "s3_download"
          }
        }
      },
      {
        "name": "prometheus",
        "image": "prom/prometheus:${version_prometheus}",
        "essential": true,
        "cpu": ${cpu_prometheus},
        "memory": ${memory_prometheus},
        "memoryReservation": ${memory_reservation_prometheus},
        "portMappings": [
          {
            "hostPort": 9090,
            "containerPort": 9090,
            "protocol": "tcp"
          }
        ],
        "links": [
          "alertmanager",
          "cloudwatch_exporter"
        ],
        "mountPoints": [
          {
            "containerPath": "/monitoring",
            "sourceVolume": "monitoring"
          }
        ],
        "command": [
          "--config.file=/monitoring/prometheus.yml",
          "--storage.tsdb.path=/monitoring/data/"
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "monitoring-${environment}",
            "awslogs-region": "${aws_region}",
            "awslogs-stream-prefix": "monitoring"
          }
        }
      },
      {
        "name": "alertmanager",
        "image": "prom/alertmanager:${version_alertmanager}",
        "essential": true,
        "cpu": ${cpu_alertmanager},
        "memory": ${memory_alertmanager},
        "memoryReservation": ${memory_reservation_alertmanager},
        "command": [
          "--config.file=/monitoring/alertmanager.yml"
        ],
        "mountPoints": [
          {
            "containerPath": "/monitoring",
            "sourceVolume": "monitoring"
          }
        ],
        "portMappings": [
          {
            "hostPort": 0,
            "containerPort": 9093
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "monitoring-${environment}",
            "awslogs-region": "${aws_region}",
            "awslogs-stream-prefix": "alertmanager"
          }
        }
      },
      {
        "name": "cloudwatch_exporter",
        "image": "prom/cloudwatch-exporter:${version_cloudwatch_exporter}",
        "essential": true,
        "cpu": ${cpu_cloudwatch_exporter},
        "memory": ${memory_cloudwatch_exporter},
        "memoryReservation": ${memory_reservation_cloudwatch_exporter},
        "command": [
          "/monitoring/cloudwatch_exporter.yml"
        ],
        "mountPoints": [
          {
            "containerPath": "/monitoring",
            "sourceVolume": "monitoring"
          }
        ],
        "portMappings": [
          {
            "hostPort": 0,
            "containerPort": 9106
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "monitoring-${environment}",
            "awslogs-region": "${aws_region}",
            "awslogs-stream-prefix": "cloudwatch_exporter"
          }
        }
      }
]
