[
      {
        "name": "grafana",
        "image": "grafana/grafana:${version_grafana}",
        "essential": true,
        "cpu": ${cpu_grafana},
        "memory": ${memory_grafana},
        "memoryReservation": ${memory_reservation_grafana},
        "mountPoints": [
          {
            "containerPath": "/var/lib/grafana",
            "sourceVolume": "grafana",
            "readOnly": null
          }
        ],
        "portMappings": [
          {
            "hostPort": ${grafana_port},
            "containerPort": ${grafana_port}
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "monitoring-${environment}",
            "awslogs-region": "${aws_region}",
            "awslogs-stream-prefix": "grafana"
          }
        }
      }
]
